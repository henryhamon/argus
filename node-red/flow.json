    {
        "id": "fn-image-assembler",
        "type": "function",
        "z": "tab-argus",
        "name": "Image Assembler",
        "func": "// Vari√°vel de contexto para acumular os peda√ßos\nvar imageBuffer = flow.get('currentImageBuffer') || Buffer.alloc(0);\n\n// Identifica o tipo de mensagem\nvar isControl = msg.topic.includes(\"control\");\nvar isData = msg.topic.includes(\"image_chunk\");\n\nif (isControl) {\n    // Tenta decodificar o JSON de controle\n    var payload = msg.payload;\n    // Se o MQTT entregou Buffer, converte pra string pra ler o JSON\n    if (Buffer.isBuffer(payload)) {\n        try { payload = JSON.parse(payload.toString()); } catch(e) {}\n    } else if (typeof payload === \"string\") {\n        try { payload = JSON.parse(payload); } catch(e) {}\n    }\n\n    if (payload && payload.status === \"start\") {\n        // [IN√çCIO]\n        node.warn(\"üîÑ START recebido. Tamanho esperado: \" + payload.size);\n        imageBuffer = Buffer.alloc(0);\n        flow.set('currentImageBuffer', imageBuffer);\n        return null; \n    }\n    else if (payload && payload.status === \"end\") {\n        // [FIM]\n        var finalSize = imageBuffer.length;\n        node.warn(\"üèÅ END recebido. Tamanho final montado: \" + finalSize);\n        \n        if (finalSize === 0) {\n            node.error(\"‚ùå ERRO CR√çTICO: Nenhum chunk foi acumulado entre Start e End!\");\n            return null;\n        }\n\n        var b64 = imageBuffer.toString('base64');\n        msg.payload = \"data:image/jpeg;base64,\" + b64;\n        return msg; \n    }\n}\nelse if (isData) {\n    // [DADOS]\n    // Log para confirmar que o chunk chegou (Remover em produ√ß√£o pois gera muito log)\n    // node.warn(\"üì¶ Chunk recebido! Tamanho: \" + msg.payload.length);\n    \n    var chunk = msg.payload;\n    if (!Buffer.isBuffer(chunk)) {\n        chunk = Buffer.from(chunk);\n    }\n    \n    imageBuffer = Buffer.concat([imageBuffer, chunk]);\n    flow.set('currentImageBuffer', imageBuffer);\n    return null;\n}",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 410,
        "y": 620,
        "wires": [
            [
                "ui-cam-template"
            ]
        ]
    },
    {
        "id": "ui-cam-template",
        "type": "ui_template",
        "z": "tab-argus",
        "group": "ui-group-cam",
        "name": "Camera Viewer",
        "order": 1,
        "width": 6,
        "height": 5,
        "format": "<div style=\"width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;\">\n    <img\n        ng-if=\"msg.payload\"\n        ng-src=\"{{msg.payload}}\"\n        style=\"max-width: 100%; max-height: 100%; border: 2px solid #444;\"\n    >\n    <div ng-if=\"!msg.payload\" style=\"text-align: center; color: gray;\">\n        <i class=\"fa fa-camera\" style=\"font-size: 30px;\"></i><br>\n        Aguardando imagem...\n    </div>\n</div>",
        "storeOutMessages": true,
        "fwdInMessages": true,
        "resendOnRefresh": true,
        "templateScope": "local",
        "className": "",
        "x": 620,
        "y": 620,
        "wires": [
            []
        ]
    },
